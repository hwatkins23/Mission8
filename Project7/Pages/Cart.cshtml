@page
@model Project7.Pages.CartModel
@{
}

<h2>Your Cart</h2>

<!--table created in order to display the information from the basket-->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var i in Model.basket.Items)
        {
            <tr>
                <td>@i.Book.Title</td>
                <td>@i.Quantity</td>
                <td>@(i.Book.Price.ToString("c"))</td>
                <!--"c" will format as currency-->
                <td>@((i.Quantity * i.Book.Price).ToString("c"))</td>
                
                <td class="text-center">
                    <form method="post" asp-page-handler="Remove">
                        <!--hidden input used to gather more information without passing it in the slug-->
                        <input type="hidden" name="bookId" value="@i.Book.BookId"/>
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div>
    <!--added additional bootstrap to the buttons dark outlining)-->
    <a class="btn btn-primary btn-outline-dark" href="@Model.ReturnUrl">Continue Shopping</a>
    <a class="btn btn-primary btn-outline-dark" asp-action="PlaceOrder" asp-controller="Order">Checkout</a>
</div>
